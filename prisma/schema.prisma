generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String?  @unique
  whatsapp  String
  password  String
  role      String   @default("staff") // admin, staff
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products  Product[]
  notifications NotificationLog[]
}

model Product {
  id              String   @id @default(cuid())
  name            String
  expirationDate  DateTime
  rhDate          DateTime  // Tanggal RH (H-14 atau custom)
  quantity        Int
  rhDaysBefore    Int      @default(14) // Hari sebelum kadaluarsa untuk RH
  status          String   @default("safe") // safe, warning, expired
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([status])
  @@index([rhDate])
  @@index([expirationDate])
}

model NotificationLog {
  id              String   @id @default(cuid())
  type            String   // warning_rh, expired_rh
  productId       String
  productName     String
  quantity        Int
  expirationDate  DateTime
  rhDate          DateTime
  status          String
  whatsappNumber  String
  message         String
  sentAt          DateTime @default(now())
  userId          String
  user            User     @relation(fields: [userId], references: [id])

  @@index([type])
  @@index([sentAt])
}